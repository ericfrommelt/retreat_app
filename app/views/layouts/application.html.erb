<!DOCTYPE html>
<html>
<head>
  <title>RetreatApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% main_user = current_user %>
  <% if !main_user %>
    <%= link_to 'Log In', login_path, id: 'login-link', remote: true %>

    <div id='user-auth-modal'>
    </div>

    <%= link_to 'Sign Up', new_user_path, id: 'signup-link', remote: true %>
  <% else %>
    <p>
      Welcome, <%= link_to main_user.first_name, user_path(main_user) %>
    </p>
  <% end %>
<%= yield %>

</body>
</html>
