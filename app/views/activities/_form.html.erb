<%= form_tag activities_path, method: :post, remote: true do %>
  <%= hidden_field_tag 'activity[category]', category %>
  <%= hidden_field_tag 'activity[getaway_id]', getaway_id %>
  <%= text_field_tag 'activity[name]', nil, placeholder: question %>
  <%= text_area_tag 'activity[comment]', nil, placeholder: 'What do you have to say?' %>
  <%= submit_tag 'Add' %>
<% end %>
