
<div id="search-div">
  <%= form_tag('/search_friends', remote: true, method: :get) do %>
      <%= text_field_tag :search %>
      <%= submit_tag 'Search Friends' %>
  <% end %>
</div>

<div class="modal">
  <div id="feed-modal">
  </div>
</div>

<%= link_to 'Add a Getaway', new_getaway_path %>

<% @users.each do |user| %>
  <% user.getaways.each do |getaway| %>
    <li>
      <%= getaway.user.first_name %>
      <%= getaway.user.last_name %>
      has gone to:
      <%= getaway.city %>,
      <%= getaway.country %>
    </li>
  <% end %>
<% end %>
